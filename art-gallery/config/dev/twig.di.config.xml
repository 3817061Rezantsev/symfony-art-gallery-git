<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="Sergo\ArtGallery\Infrastructure\ViewTemplate\ViewTemplateInterface"
                 alias="Sergo\ArtGallery\Infrastructure\ViewTemplate\TwigTemplate"/>

        <service id="Sergo\ArtGallery\Infrastructure\ViewTemplate\TwigTemplate">
            <argument key="$pathToTemplates" type="collection">
                <argument>%kernel.project_dir%/templates/</argument>
                <argument>%kernel.project_dir%/vendor/symfony/twig-bridge/Resources/views/Form</argument>
            </argument>
            <argument key="$cacheDir">%kernel.project_dir%/var/cache/twig</argument>
            <argument key="$debug">true</argument>
            <configurator service="Sergo\ArtGallery\Infrastructure\TwigConfigurator\TwigConfigurator" method="configure"/>
        </service>
        <service id="Sergo\ArtGallery\Infrastructure\TwigConfigurator\TwigConfigurator">
            <argument key="$twigFormatter" type="service" id="Sergo\ArtGallery\Infrastructure\TwigConfigurator\TwigFormatter"/>
        </service>
       <service id="Sergo\ArtGallery\Infrastructure\TwigConfigurator\TwigFormatter"/>
    </services>
</container>